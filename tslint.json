{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "indent": [
            true,
            "spaces",
            4
        ],
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "no-console": false,
        "curly": true,
        "triple-equals": true,
        "typedef": [
            true,
            "call-signature",
            "property-declaration"
        ],
        "no-string-throw": true,
        "no-var-keyword": true,
        "no-trailing-whitespace": true,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "max-line-length": false
    },
    "rulesDirectory": []
}