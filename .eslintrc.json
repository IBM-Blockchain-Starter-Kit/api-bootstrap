{
	"extends": "airbnb-base",
	"env": {
		"node": true,
		"mocha": true
	},
	"parser": "typescript-eslint-parser",
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"modules": true
		}
	},
	"plugins": [
		"typescript"
	],
	"rules": {
		"no-underscore-dangle": "off",
		"import/no-dynamic-require": "off"
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [
					".js",
					".ts"
				]
			}
		}
	}
}